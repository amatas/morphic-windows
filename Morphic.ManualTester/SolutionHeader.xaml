<UserControl x:Class="Morphic.ManualTester.SolutionHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Morphic.ManualTester"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="0,20,0,0">
            <DockPanel HorizontalAlignment="Stretch">
                <TextBlock Name="SolutionName"  FontWeight="Bold" FontSize="20"/>
                <Button Name="ExpandButton" Content="Expand" Width="100" HorizontalAlignment="Right" Click="ExpandButton_Click"/>
            </DockPanel>
            <StackPanel Name="ControlStack" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
