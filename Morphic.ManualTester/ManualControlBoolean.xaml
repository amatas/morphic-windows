<UserControl x:Class="Morphic.ManualTester.ManualControlBoolean"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Morphic.ManualTester"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TreeViewItem FontSize="14" FontWeight="Normal" Margin="0,5,0,0" Background="GhostWhite" Foreground="Black">
            <TreeViewItem.Header>
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Width="700">
                    <TextBlock Name="ControlName" DockPanel.Dock="Left"/>
                    <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <TextBlock Text="Boolean:" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <CheckBox Name="ControlCheckBox" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,20,0" Checked="ValueChanged" Unchecked="ValueChanged"/>
                    </DockPanel>
                </DockPanel>
            </TreeViewItem.Header>
        </TreeViewItem>
    </Grid>
</UserControl>

    
    