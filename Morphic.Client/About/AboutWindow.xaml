<Window x:Class="Morphic.Client.About.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Morphic.Client.About"
        mc:Ignorable="d"
        Title="About Morphic" Height="260" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <Image Source="/Icon.png" Width="60" Margin="30"/>
        <Label x:Name="AppName" HorizontalAlignment="Center" FontWeight="Bold">Morphic for Windows</Label>
        <Label x:Name="VersionLabel" HorizontalAlignment="Center">Version</Label>
        <Label x:Name="BuildLabel" HorizontalAlignment="Center">Build</Label>
    </StackPanel>
</Window>
