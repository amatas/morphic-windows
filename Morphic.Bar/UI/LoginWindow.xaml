<Window x:Class="Morphic.Bar.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:client="clr-namespace:Morphic.Bar.Client"
        xmlns:ui="clr-namespace:Morphic.Bar.UI"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance ui:LoginWindow}"
        Title="Login" SizeToContent="Height" Width="300">
    <StackPanel Margin="20">

        <TextBlock FontSize="20">Login</TextBlock>
        
        <TextBlock Background="{x:Static SystemColors.InfoBrush}" Foreground="{x:Static SystemColors.InfoTextBrush}"
                   TextWrapping="Wrap"
                   Text="{Binding Credentials.LastFailure}">
        </TextBlock>

        <Label Content="Server"/>
        <TextBox Text="{Binding Credentials.ServerHost}" Margin="0 0 0 10"/>
        
        <Label Content="Username"/>
        <TextBox Text="{Binding Credentials.UserName}" Margin="0 0 0 10"/>
        
        <Label Content="Password"/>
        <PasswordBox x:Name="PasswordBox" Margin="0 0 0 10"/>
        
        <Button Content="Login" Click="LoginButton_Click" Margin="20" IsDefault="True" />
    </StackPanel>
</Window>
