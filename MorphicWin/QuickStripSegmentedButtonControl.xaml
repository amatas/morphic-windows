<local:QuickStripItemControl x:Class="MorphicWin.QuickStripSegmentedButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MorphicWin"
             mc:Ignorable="d" 
             d:DesignHeight="44" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="27"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="TitleLabel" FontSize="14" FontFamily="{x:Static SystemFonts.MessageFontFamily}" FontWeight="Bold" Content="Text Size" VerticalAlignment="Top" Padding="0,0,0,0" HorizontalAlignment="Center" Height="17" Margin="0,-4,0,0"/>
        <StackPanel Grid.Row="2" Name="ActionStack" Orientation="Horizontal" HorizontalAlignment="Center">
        </StackPanel>
    </Grid>
</local:QuickStripItemControl>
